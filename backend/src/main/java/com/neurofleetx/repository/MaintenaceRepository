package com.neurofleetx.repository;

import com.neurofleetx.model.MaintenanceAlert;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import java.util.List;

@Repository
public interface MaintenanceRepository extends JpaRepository<MaintenanceAlert, Long> {
    
    // Finds alerts by status (e.g., "OPEN" or "RESOLVED")
    List<MaintenanceAlert> findByStatus(String status);
    
    // Counts alerts based on status for analytics
    long countByStatus(String status);
    
    // Finds alerts specifically for a vehicle ID
    List<MaintenanceAlert> findByVehicleId(String vehicleId);
}
